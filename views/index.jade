  body
    #main
      #myMap
    #sidebar
      label#title StreetSideCV
      div#classifiers.container
          label Classifiers
          select#dropdown(style='display: block;')
            option( value='faces' ) Faces
            option( value='full_body' ) Full Body
            option( value='car_side') Car (side)
            option( value='car_frontback') Car (front/back)
            option( value='license') License Plates
            option( value='housenumbers') Housenumbers (BETA!)

      div#locations.container
          label Locations
          div
            button.location#loc_pearl_street Pearl Street, Boulder
            button.location#loc_times_square Times Square, NYC
            button.location#loc_empire_state_building Central Park, NYC
            button.location#loc_herald_square Herald Square, NYC
            button.location#loc_empire_state_building Empire State Building, NYC
            button.location#loc_world_trade_center World Trade Center, NYC
            button.location#loc_eiffel_tower The Eiffel Tower, Paris
            button.location#loc_louvre The Louvre, Paris
            //- button.location#loc_bing_1cube 1 cube in front of Bing (dev)

      div#start.button(onclick='send();') Start
