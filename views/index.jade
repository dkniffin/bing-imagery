    script(type='text/javascript', src='http://code.jquery.com/jquery-2.1.1.min.js')
    script(type='text/javascript', src='javascripts/jquery.easyModal.js')
    script(type='text/javascript', src='javascripts/ProgressBar.js')

    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js')
