  body
    #main
      #myMap
    #sidebar
      div#title StreetSideCV
      select#classifier(style='display: block;')
        option( value='faces' ) Faces
        option( value='full_body' ) Full Body
        option( value='car_side') Car (side)
        option( value='car_frontback') Car (front/back)
        option( value='license') License Plates
        option( value='housenumbers') Housenumbers (BETA!)

      div#locations
        button.location#loc_pearl_street Pearl Street
        button.location#loc_times_square Times Square
        button.location#loc_herald_square Herald Square
        button.location#loc_world_trade_center World Trade Center
        button.location#loc_bing_1cube 1 cube in front of Bing (dev)

      div#progress

      button#start(onclick='send();') Start
